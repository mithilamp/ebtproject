<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:WeatherApp.Controls"
             x:Class="WeatherApp.Views.AddCityPage">

        <StackLayout>
            <controls:ExtendedPlaceSearchBar x:Name="SearchBar"/>
            <AbsoluteLayout>
                <ActivityIndicator x:Name="spinner" IsRunning="false"
			        AbsoluteLayout.LayoutBounds="0.5, 0.1, 50, 50" AbsoluteLayout.LayoutFlags="PositionProportional" />
                <ListView x:Name="results_list" IsVisible="false"
			        AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="SizeProportional" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Description}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </AbsoluteLayout>
        <Button Text="Add" Clicked="ClickedAsync"/>
        </StackLayout>

</ContentPage>